<h1>Products</h1>

<form method="GET" action="/products">
    <fieldset>
        <label>Search
            <input type="text" name="search">
        </label>
    </fieldset>
    <button type="submit">Search</button>
</form>

<ul class="products-list">
    {{#each products}}
    <li>
        <h2>{{this.name}}</h2>
        <p>{{this.price}}</p>
        <p>sku: {{this.sku}}</p>
        <a href="/products/{{this.id}}">view</a>
    </li>
    {{/each}}
</ul>